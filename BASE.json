{
  "title": "BASE",
  "rules": [
    {
      "description": "Command f1 and f2 to adjust keyboard brightness",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f1",
            "modifiers": {
              "mandatory": ["left_command"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "illumination_decrement"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f2",
            "modifiers": {
              "mandatory": ["left_command"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "illumination_increment"
            }
          ]
        }
      ]
    },

    {
      "description": "Arc & Zen cmd + D & switch tab controls",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "n",
              "modifiers": ["left_shift", "left_option", "left_control", "left_command"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^company\\.thebrowser\\.Browser$", "^app\\.zen-browser\\.zen$"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": ["command", "shift"]
            }
          },
          "to": [
            {
              "key_code": "d",
              "modifiers": ["command"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^company\\.thebrowser\\.Browser$", "^app\\.zen-browser\\.zen$"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": ["command", "option"]
            }
          },
          "to": [
            {
              "key_code": "p",
              "modifiers": ["command", "option"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^company\\.thebrowser\\.Browser$"]
            }
          ]
        },

        {
          "type": "basic",
          "from": {
            "key_code": "w",
            "modifiers": {
              "mandatory": ["command", "option"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": ["command", "option"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^company\\.thebrowser\\.Browser$"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": ["command", "option"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": ["command", "option"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^company\\.thebrowser\\.Browser$"]
            }
          ]
        },

        {
          "type": "basic",
          "from": {
            "key_code": "w",
            "modifiers": {
              "mandatory": ["command", "option"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["command", "option"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^app\\.zen-browser\\.zen$"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": ["command", "option"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["command", "option"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^app\\.zen-browser\\.zen$"]
            }
          ]
        }
      ]
    },

    {
      "description": "Spotify controls",
      "manipulators": [
        {
          "from": {
            "key_code": "play_or_pause"
          },
          "to": [
            {
              "shell_command": "osascript -e 'tell application \"Spotify\" to playpause'"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "f8"
          },
          "to": [
            {
              "shell_command": "osascript -e 'tell application \"Spotify\" to playpause'"
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "type": "device_if",
              "identifiers": [
                {
                  "product_id": 45929,
                  "vendor_id": 1133
                }
              ]
            }
          ],
          "type": "basic",
          "from": {
            "key_code": "volume_increment",
            "modifiers": {
              "mandatory": ["command"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "shell_command": "osascript -e 'tell application \"Spotify\" to next track'"
            }
          ]
        },
        {
          "conditions": [
            {
              "type": "device_if",
              "identifiers": [
                {
                  "product_id": 45929,
                  "vendor_id": 1133
                }
              ]
            }
          ],
          "type": "basic",
          "from": {
            "key_code": "volume_decrement",
            "modifiers": {
              "mandatory": ["command"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "shell_command": "osascript -e 'tell application \"Spotify\" to previous track'"
            }
          ]
        }
      ]
    },

    {
      "description": "Press twice period to activate Raycast emoji picker double",
      "manipulators": [
        {
          "conditions": [
            {
              "type": "variable_if",
              "name": "period pressed",
              "value": 1
            }
          ],
          "type": "basic",
          "from": {
            "key_code": "period"
          },
          "to": [
            {
              "key_code": "delete_or_backspace",
              "hold_down_milliseconds": 10
            },
            {
              "key_code": "y",
              "modifiers": ["left_shift", "left_option", "left_control", "left_command"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "period",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "period pressed",
                "value": 1
              }
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "period"
            }
          ],
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 0
          },
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "set_variable": {
                  "name": "period pressed",
                  "value": 0
                }
              }
            ],
            "to_if_canceled": [
              {
                "set_variable": {
                  "name": "period pressed",
                  "value": 0
                }
              }
            ]
          }
        }
      ]
    },

    {
      "description": "Window management mac remap opt + A & Z",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "q",
              "modifiers": ["left_shift", "left_option", "left_control", "left_command"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "w",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "w",
              "modifiers": ["left_shift", "left_option", "left_control", "left_command"]
            }
          ]
        }
      ]
    },

    {
      "description": "Mute mac",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f20"
          },
          "to": [
            {
              "key_code": "equal_sign",
              "modifiers": ["left_shift", "left_option", "left_control", "left_command"]
            }
          ]
        }
      ]
    },

    {
      "description": "Backtick ` close",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "backslash"
          },
          "to": [
            {
              "key_code": "backslash"
            },
            {
              "key_code": "backslash"
            },
            {
              "key_code": "left_arrow"
            }
          ]
        }
      ]
    },

    {
      "description": "Parentheses () close",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "5"
          },
          "to": [
            {
              "key_code": "5"
            },
            {
              "key_code": "hyphen"
            },
            {
              "key_code": "left_arrow"
            }
          ]
        }
      ]
    },

    {
      "description": "Braces {} close",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "5",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "5",
              "modifiers": ["option"]
            },
            {
              "key_code": "hyphen",
              "modifiers": ["option"]
            },
            {
              "key_code": "left_arrow"
            }
          ]
        }
      ]
    },

    {
      "description": "command + tab AltTab app",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["left_shift", "left_option", "left_control", "left_command"]
            }
          ]
        }
      ]
    }
  ]
}
