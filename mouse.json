{
  "title": "Mouse test",
  "rules": [
    {
      "description": "Mouse test",
      "manipulators": [
        {
          "description": "option + j = mouse left",
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "mouse_key": {
                "x": -800
              }
            }
          ]
        },
        {
          "description": "shift + control + j = mouse wheel left",
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["left_option", "left_command"]
            }
          },
          "to": [
            {
              "mouse_key": {
                "horizontal_wheel": 64
              }
            }
          ]
        },
        {
          "description": "option + k = mouse down",
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "mouse_key": {
                "y": 800
              }
            }
          ]
        },
        {
          "description": "shift + control + k = mouse wheel down",
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["left_option", "left_command"]
            }
          },
          "to": [
            {
              "mouse_key": {
                "vertical_wheel": 64
              }
            }
          ]
        },
        {
          "description": "option + i = mouse up",
          "type": "basic",
          "from": {
            "key_code": "i",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "mouse_key": {
                "y": -800
              }
            }
          ]
        },
        {
          "description": "shift + control + i = mouse wheel up",
          "type": "basic",
          "from": {
            "key_code": "i",
            "modifiers": {
              "mandatory": ["left_option", "left_command"]
            }
          },
          "to": [
            {
              "mouse_key": {
                "vertical_wheel": -64
              }
            }
          ]
        },
        {
          "description": "option + l = mouse move right",
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "mouse_key": {
                "x": 800
              }
            }
          ]
        },
        {
          "description": "shift + control + l = mouse wheel right",
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["left_option", "left_command"]
            }
          },
          "to": [
            {
              "mouse_key": {
                "horizontal_wheel": -64
              }
            }
          ]
        },

        {
          "description": "enter = button1 (mouse left click)",
          "type": "basic",
          "from": {
            "key_code": "u",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "pointing_button": "button1"
            }
          ]
        },
        {
          "description": "command + enter = button2 (mouse right click)",
          "type": "basic",
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "pointing_button": "button2"
            }
          ]
        }
      ]
    }
  ]
}
